@model IEnumerable<WCCIFinalProject.Models.ProjectData>

@{
    ViewBag.Title = "Index";
}


<body class="ProjectsBackground">
   
        @*<p>
            @Html.ActionLink("create new", "create")
        </p>*@

       

    <div class="container-fluid text-center">
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>

                </div>
                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">


                    <ul class="nav">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Projects", "Index", "ProjectDatas")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>

                    </ul>
                </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
        </nav>
        </div>


        <div class="container" style="overflow: hidden">


            @foreach (var item in Model)
            {
                <div class="project">
                    <div class="col-sm-offset-3 col-sm-9 title">@item.ProjectName</div>

                    <div class="col-sm-2">

                        <a target="_blank" href="@item.GitHub">
                        <img class="img-responsive" src="~/Content/Images/Octocat.png" />
                        </a>

                    </div>
                    <div class="col-sm-5">
                        <img class="img-responsive" src="@item.ImageLink" />

                    </div>
                    <div class="col-sm-5 description">
                        <p>@item.ProjectDescription</p>
                    </div>

                    @*@Html.DisplayFor(modelItem => item.Language)*@

                    @*@Html.DisplayFor(modelItem => item.Collaborators)*@

                    @*@Html.ActionLink("Edit", "Edit", new { id = item.ProjectID })
                        @Html.ActionLink("Details", "Details", new { id = item.ProjectID })
                        @Html.ActionLink("Delete", "Delete", new { id = item.ProjectID })*@


                </div>

            }




